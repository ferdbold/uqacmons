<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation ="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pokedex"
    android:screenOrientation="portrait"
    tools:context=".RadarActivity"
      >

    <ImageButton
        android:id="@+id/b_uqacpedia"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-15dp"
        android:alpha="0"
        android:background="@null"
        android:contentDescription="@string/pokedex"
       
        android:src="@drawable/pokedex_bouton" />
    
    <Button
        android:id="@+id/b_flash"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Flash"
        android:textSize = "10dp"
        android:layout_toRightOf = "@+id/b_uqacpedia"
        />
    <Button
        android:id="@+id/b_get"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="GET" 
        android:textSize = "10dp"
        android:layout_toRightOf = "@+id/b_flash"
        />
    <Button
        android:id="@+id/b_release"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Release" 
        android:textSize = "10dp"
        android:layout_toRightOf = "@+id/b_get"
        />
     <Button
        android:id="@+id/b_up"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="U" 
        android:textSize = "10dp"
        android:layout_toRightOf = "@+id/b_release"
        />
    
      <Button
        android:id="@+id/b_down"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="D" 
        android:textSize = "10dp"
        android:layout_toRightOf = "@+id/b_up"
        />
     

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/b_uqacpedia"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="-10dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/blueBip"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pokedex_bouton"
             android:gravity="center_vertical|center_horizontal|left" />

        <ImageView
            android:id="@+id/redBip"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pokedex_bouton2"
             android:gravity="center_vertical|center_horizontal|left" />

        <ImageView
            android:id="@+id/redCircle"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/red_circle"
             android:gravity="center_vertical|center_horizontal|left" />
    </RelativeLayout>

    <TextView
        android:id="@+id/TESTVIEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b_down"
        android:layout_toRightOf="@+id/b_down"
        android:text="TextView" />

</RelativeLayout>